    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'restapi'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=pandemia_server",
                    "--package=pandemia"
                ],
                "filter": {
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'web'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=web",
                    "--package=pandemia"
                ],
                "filter": {
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in api",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=api",
                ],
                "filter": {
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
